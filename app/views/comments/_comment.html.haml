%li{ :id => "comment_#{comment.id}", :class => 'comment' }
  .author
    %div
    %cite
      - if comment.url.nil?
        =h comment.author
      - else
        = link_to h(comment.author), comment.url
    %abbr{ :title => I18n.localize(comment.created_at) }
      il y a
      = time_ago_in_words(comment.created_at)
  .content
    = markdown_no_html(comment.body)
