- @categories.each do |category|
  %h1=h category.display_name
  %ul
    - category.posts.find(:all, :conditions => 'published = true').each do |post|
      %li
        = link_to h(post.title), post
        par
        = link_to h(post.author.name), archives_url(post.author)
        %abbr{ :title => I18n.localize(post.created_at) }
          il y a
          = time_ago_in_words(post.created_at)
        \/
        - post.tags.each do |tag|
          = link_to h(tag.display_name), archives_url(tag)
