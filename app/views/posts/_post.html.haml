- form_for(@post) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :intro
    %br
    = f.text_area :intro
  %p
    = f.label :body
    %br
    = f.text_area :body
  %p
    = f.label :tags
    %br
    = f.text_field :tags
  %p
    = f.label :published
    %br
    = f.check_box :published

  %p
    = f.submit :Go!
