.hentry{ :id => "post-#{post.id}" }
  %h2.entry-title= link_to h(post.title), post
  .vcard
    Posté par
    %span.fn
      = link_to h(post.author.name), archives_by_author_url(post.author)
  %abbr.published{ :title => I18n.localize(post.created_at) }
    il y a
    = time_ago_in_words(post.created_at)
  %br.clear
  .entry-content
    =markdown post.intro
    - if post.body
      .extended
        - if controller.action_name == 'index'
          = link_to 'Lire la suite...', post
        - else
          = markdown post.body
  %ul.meta
    %li.categories
      catégorie:
      = link_to h(post.category.display_name), archives_by_category_url(post.category)
    %li.tags
      Mots-clefs:
      - post.tags.each do |tag|
        =link_to h(tag.display_name), archives_by_tag_url(tag)
    %li
      Meta:
      = link_to "#{(c = post.comments.count).zero? ? 'aucun' : c} commentaire#{'s' if post.comments.count > 1}", :action => :show, :id => post, :anchor => :comments
      \-
      = link_to 'flux Atom', post_path(post, :atom)
      \-
      = link_to 'Lien permanent', post
